%table.table
  %thead
    %tr
      %th Owner
      %th Project Name
      %th Description
      %th Technology
      %th 
    - @projects.each do |project|
      %tr
        %td
          %img{src: "#{project.owner.profile_image_url}"}
          .display-name= project.owner.display_name
        %td
          .project_name= project.name
        %td
          .description= project.description
        %td
          .technology= project.technology
        %td
          = link_to("Edit", edit_project_path(project))

%a{href: 'projects/new', class: 'btn'}
  %i{class: 'icon-plus'}
  = " Add project"
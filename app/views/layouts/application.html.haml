!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "PairExchange"
    = csrf_meta_tags
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.brand(href="/") PairExchange
          - if admin_logged_in?
            %a.btn(href="/events") Events
          %a.pull-right.btn(href="/logout") Sign out
          = yield(:filters) if content_for?(:filters)
    .container-fluid
      .row-fluid
        .span12
          = yield

    = javascript_include_tag "application"
